@model IList<DemoApplication.Core.Model.Contact>

@{
    ViewBag.Title = "Contacts";
}

@section AltNav
{
    @Html.MvcSiteMap().Pills(SiteMap.Provider.FindSiteMapNodeFromKey("ManageContacts"), true, false)

    
}

<div class="row-fluid">
    <div class="span2">
        <div class="">
            <form>
                <select style="width: 100%; display: block">
                    <option>Customers</option>
                    <option>Distributors</option>
                </select>
                <input type="text" class="input-medium" placeholder="Contact ID">
                <input type="text" class="input-medium" placeholder="Contact Name">
                <input type="text" class="input-medium" placeholder="Contact Email">
                <input type="text" class="input-medium" placeholder="Contact Phone">
                <hr/>
                <button class="btn btn-small">Save Search</button>
                <hr/>
                <button class="btn btn-inverse btn-small">Clear Filters</button>

            </form>
        </div>
    </div>
    <div class="span10">
        <table class="table">
            <tr>
                <th>Contact ID</th>
                <th>Name</th>
                <th>Create Date</th>
                <th>Email</th>
                <th>Status</th>
                <th>Role</th>
            </tr>
            @foreach (var contact in Model)
            {
                <tr>
                    <td>@contact.Id</td>
                    <td>@contact.FirstName @contact.LastName</td>
                    <td>@contact.Created</td>
                    <td>@contact.Email</td>
                    <td></td>
                    <td>(N/A)</td>
                </tr>
            }                      
          
        </table>
    </div>
</div>




<div class="row-fluid">
    <div class="pagination span6 offset2">
        <ul>
            <li><a href="#">Prev</a></li>
            <li><a href="#">1</a></li>

@{
    Layout = "~/Views/Shared/Basic.cshtml";
    ViewBag.Title = "Organization Details";
}
@model IList<DemoApplication.Core.Model.User>

@section AltNav
{
    <ul class="nav nav-pills pull-right">
        <li>
            <a href="@Url.Action("Index", "Invitations")">Invite User</a>
        </li>
    </ul>
}


<h3>Members</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Username</th>
            <th>Last Login</th>
            <th>Approved</th>
            <th>Is Locked Out</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>
                    <a href="@Url.Action("Details", "Users", new { id = user.Id })">@user.FullName</a>
                </td>
                <td>
                    @user.Username
                </td>
                <td>
                    @user.LastLogin.GetValueOrDefault(DateTime.MinValue).ToLocalTime()
                </td>
                <td>
                    @user.IsAccountVerified
                </td>

                <td>
                    @user.IsLoginAllowed
                </td>
            </tr>
        }

    </tbody>
</table>
